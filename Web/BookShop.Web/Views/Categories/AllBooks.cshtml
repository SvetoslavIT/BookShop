@model BookShop.Web.ViewModels.Categories.AllBooksByCategoryViewModel
@{
    ViewData["Title"] = "AllBooks";
}

<h2>@Model.CategoryName Книги</h2>

@await Html.PartialAsync("_AllBooksPartial", Model.BooksModel)

<nav class="mt-4">
    <ul class="pagination">
        @for (var i = 1; i <= Model.BooksModel.Pages; i++)
        {
            <li style="cursor: pointer;" class="page-item  active">
                <a class="page-link" asp-action="AllBooks" asp-route-id="@Model.CategoryId" asp-route-page="@(i - 1)">@i</a>
            </li>
        }
    </ul>
</nav>